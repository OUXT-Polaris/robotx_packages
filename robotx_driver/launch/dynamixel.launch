<?xml version="1.0"?>
<launch>
    <arg name="left_thruster_joint_dynamixel_device_name"      default="/dev/ttyUSB0"/>
    <arg name="left_thruster_joint_dynamixel_baud_rate"        default="57600"/>

    <arg name="right_thruster_joint_dynamixel_device_name"      default="/dev/ttyUSB1"/>
    <arg name="right_thruster_joint_dynamixel_baud_rate"        default="57600"/>

    <arg name="scan_range"                 default="10"/>

    <arg name="profile_velocity"           default="200"/>
    <arg name="profile_acceleration"       default="50"/>

    <param name="left_thruster_joint_dynamixel/device_name"      value="$(arg left_thruster_joint_dynamixel_device_name)"/>
    <param name="left_thruster_joint_dynamixel/baud_rate"        value="$(arg left_thruster_joint_dynamixel_baud_rate)"/>

    <param name="right_thruster_joint_dynamixel/device_name"      value="$(arg right_thruster_joint_dynamixel_device_name)"/>
    <param name="right_thruster_joint_dynamixel/baud_rate"        value="$(arg right_thruster_joint_dynamixel_baud_rate)"/>

    <param name="scan_range"               value="$(arg scan_range)"/>

    <param name="profile_velocity"         value="$(arg profile_velocity)"/>
    <param name="profile_acceleration"     value="$(arg profile_acceleration)"/>
    
    <node name="multi_port_example" pkg="dynamixel_workbench_controllers" type="multi_port" output="screen" respawn="true"/>
</launch>